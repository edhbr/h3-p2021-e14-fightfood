<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <View
                    android:id="@+id/Icon1"
                    android:layout_width="29.17dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/food1" android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="@+id/food1"
                    android:layout_marginBottom="24dp" android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/food1"/>
            <RelativeLayout
                    android:id="@+id/raised_norm"
                    android:layout_width="328dp"
                    android:layout_height="61dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#FFB931"
                    android:elevation="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="43dp"
                    app:layout_constraintTop_toBottomOf="@+id/become_prem"/>
            <View
                    android:id="@+id/icon3"
                    android:layout_width="29.17dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/food1" android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp" app:layout_constraintBottom_toBottomOf="@+id/food1"
                    android:layout_marginBottom="24dp" android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/icon2" app:layout_constraintVertical_bias="0.511"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/countNumb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat" app:fontFamily="sans-serif"
                    android:textSize="24sp" android:textColor="@android:color/white" android:textStyle="bold"
                    android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_marginBottom="32dp"/>
            <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/label"
                    android:elevation="10dp"
                    android:textAppearance="@style/label"
                    android:fontFeatureSettings="pnum, lnum"
                    android:lineSpacingExtra="8sp"
                    android:gravity="center_horizontal|center_vertical"
                    app:layout_constraintEnd_toEndOf="@+id/raised_norm"
                    app:fontFamily="@font/roboto_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/raised_norm"
                    app:layout_constraintTop_toTopOf="@+id/raised_norm"
                    app:layout_constraintStart_toStartOf="@+id/raised_norm"/>
            <View
                    android:id="@+id/icon5"
                    android:layout_width="29.17dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/food2" android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp" app:layout_constraintBottom_toBottomOf="@+id/food2"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/icon4" android:layout_marginBottom="24dp"
                    app:layout_constraintVertical_bias="0.511"/>
            <TextView
                    android:text="@string/stat3"
                    android:id="@+id/natural"
                    android:layout_width="116dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="@style/natural"
                    android:fontFeatureSettings="pnum, lnum"
                    android:lineSpacingExtra="1sp"
                    android:gravity="center_horizontal|top"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/icon3"
                    app:layout_constraintEnd_toEndOf="@+id/icon3"
                    app:layout_constraintStart_toStartOf="@+id/icon3" app:fontFamily="@font/baloo_chettan"/>
            <TextView
                    android:id="@+id/fight_resul"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:text="@string/fight_resul"
                    android:textAppearance="@style/fight_resul"
                    android:fontFeatureSettings="pnum, lnum"
                    android:elevation="10dp"
                    android:lineSpacingExtra="9sp"
                    android:gravity="top"
                    app:fontFamily="@font/" android:textStyle="bold"
                    android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="48dp" android:layout_marginTop="59dp"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <Button
                    android:text="@string/jeejText"
                    android:onClick="toastMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintVertical_bias="0.666"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.457"/>
            <TextView
                    android:text="@string/stat2"
                    android:id="@+id/quality"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="@style/quality"
                    android:fontFeatureSettings="pnum, lnum"
                    android:lineSpacingExtra="1sp"
                    android:gravity="top"
                    app:layout_constraintBottom_toTopOf="@+id/icon2"
                    android:layout_marginBottom="50dp" app:layout_constraintEnd_toEndOf="@+id/icon2"
                    app:layout_constraintStart_toStartOf="@+id/icon2" app:fontFamily="@font/baloo_chettan"/>
            <View
                    android:id="@+id/food1"
                    android:layout_width="119dp"
                    android:layout_height="126dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginTop="166dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/compare_mor"
                    android:layout_width="242dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/compare_mor"
                    android:textAppearance="@style/compare_mor"
                    android:fontFeatureSettings="pnum, lnum"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                    app:fontFamily="@font/roboto"
                    app:layout_constraintTop_toTopOf="@+id/iconmonstr"/>
            <View
                    android:id="@+id/icon6"
                    android:layout_width="29.17dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/food2" android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp" app:layout_constraintBottom_toBottomOf="@+id/food2"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/icon5" android:layout_marginBottom="24dp"
                    app:layout_constraintVertical_bias="0.511"/>
            <RelativeLayout
                    android:id="@+id/iconmonstr"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="33dp" android:layout_marginStart="33dp"
                    app:layout_constraintEnd_toStartOf="@+id/compare_mor" android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="47dp"
                    app:layout_constraintTop_toBottomOf="@+id/food2">
            </RelativeLayout>
            <TextView
                    android:text="@string/stat1"
                    android:id="@+id/calories"
                    android:layout_width="63dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textAppearance="@style/calories"
                    android:fontFeatureSettings="pnum, lnum"
                    android:lineSpacingExtra="1sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="@+id/Icon1"
                    app:layout_constraintEnd_toEndOf="@+id/Icon1"
                    app:layout_constraintBottom_toTopOf="@+id/Icon1"
                    android:layout_marginBottom="50dp" app:fontFamily="@font/baloo_chettan"/>
            <TextView
                    android:id="@+id/become_prem"
                    android:layout_width="242dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/become_prem"
                    android:textAppearance="@style/become_prem"
                    android:fontFeatureSettings="pnum, lnum"
                    android:lineSpacingExtra="8sp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="16dp" app:fontFamily="@font/roboto_medium" android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/compare_mor"/>
            <View
                    android:id="@+id/food2"
                    android:layout_width="119dp"
                    android:layout_height="126dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/food1" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
            <View
                    android:id="@+id/icon2"
                    android:layout_width="29.17dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/food1" android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp" app:layout_constraintBottom_toBottomOf="@+id/food1"
                    android:layout_marginBottom="24dp" android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/Icon1" app:layout_constraintVertical_bias="0.511"/>
            <View
                    android:id="@+id/icon4"
                    android:layout_width="29.17dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/food2" android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="@+id/food2"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toEndOf="@+id/food2" android:layout_marginBottom="24dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>